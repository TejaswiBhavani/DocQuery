{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/upload.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    },
    "api/search.py": {
      "runtime": "python3.11", 
      "maxDuration": 30
    },
    "api/analyze.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    }
  },
  "outputDirectory": "frontend/.next"
}