{
  "name": "docquery",
  "version": "1.0.0",
  "description": "AI-powered document analysis system with Next.js frontend and FastAPI serverless backend",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "install:all": "npm install && cd frontend && npm install",
    "test:api": "python -m pytest api/ -v",
    "test:backend": "python -m pytest backend/ -v"
  },
  "main": "frontend/pages/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TejaswiBhavani/DocQuery.git"
  },
  "keywords": [
    "ai",
    "document-analysis",
    "nextjs",
    "fastapi", 
    "vercel",
    "serverless"
  ],
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  }
}
