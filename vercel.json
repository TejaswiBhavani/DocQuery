{
  "version": 2,
  "builds": [
    {
      "src": "pages/**/*.js",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "pages/$1"
    }
  ],
  "functions": {
    "api/upload.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    },
    "api/search.py": {
      "runtime": "python3.11", 
      "maxDuration": 30
    },
    "api/analyze.py": {
      "runtime": "python3.11",
      "maxDuration": 30
    }
  }
}