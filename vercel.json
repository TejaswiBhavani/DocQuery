{
  "version": 2,
  "buildCommand": "python build.py --output public",
  "builds": [
    {
      "src": "api.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api.py"
    },
    {
      "src": "/health",
      "dest": "/api.py"
    },
    {
      "src": "/docs",
      "dest": "/api.py"
    },
    {
      "src": "/openapi.json",
      "dest": "/api.py"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/robots.txt",
      "dest": "/public/robots.txt"
    },
    {
      "src": "/sitemap.xml", 
      "dest": "/public/sitemap.xml"
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/public/manifest.json"
    },
    {
      "src": "/style.css",
      "dest": "/public/style.css"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "VERCEL_DEPLOYMENT": "true",
    "PYTHONPATH": "."
  },
  "functions": {
    "api.py": {
      "maxDuration": 30
    }
  }
}